<MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
    <MudStack Row="true" Spacing="2">
                <MudText Typo="Typo.h6" Class="my-auto">Dzie≈Ñ @CurrentDay/@TotalDays</MudText>
        <MudButton OnClick="PreviousDay" Disabled="@(CurrentDay <= 1)" Variant="Variant.Outlined" Color="Color.Primary">
            <MudIcon Icon="@Icons.Material.Filled.ArrowBackIos" Size="Size.Small" />
        </MudButton>
        <MudButton OnClick="NextDay" Disabled="@(CurrentDay >= TotalDays)" Variant="Variant.Outlined" Color="Color.Primary">
            <MudIcon Icon="@Icons.Material.Filled.ArrowForwardIos" Size="Size.Small" />
        </MudButton>
    </MudStack>
</MudStack>

@code {
    [Parameter]
    public int CurrentDay { get; set; }

    [Parameter]
    public int TotalDays { get; set; }

    [Parameter]
    public EventCallback OnPreviousDay { get; set; }

    [Parameter]
    public EventCallback OnNextDay { get; set; }

    private async Task PreviousDay()
    {
        await OnPreviousDay.InvokeAsync();
    }

    private async Task NextDay()
    {
        await OnNextDay.InvokeAsync();
    }
} 